<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
    <title>{% block title %}Assembl UI{% endblock %}</title>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link type="text/css" rel="stylesheet" href="/static/css/style.css" />
    <link type="text/css" rel="stylesheet" href="/static/css/themes/{{theme}}/theme.css" />

    {% block extra_css %}{% endblock extra_css %}
</head>
<body>

<aside class="sg-sidebar gu gu-1of5">
    <h1 class="logo tac pas h1">Assembl UI</h1>
    <nav class="sg-sidebar-nav paxl">
      {% for name, path in styleguide_views.items() %}
        <h2 class="h3 sg-title"><a href="#{{name}}">{{name}}</a></h2>
      {% endfor %}
    </nav>
</aside>

<main class="sg-main">
  <div class="fluid-container">
   {% for name, path in styleguide_views.items() %}
    <div id="{{name}}" class="sg-section phxl">
      <h1 class="h1 sg-section-title mbl">{{name}}</h1>
      {% include path %}
    </div>
   {% endfor %}
  </div>
</main>

{% include 'includes/javascript.jinja2' %}
{% block main_js %}
    <script src="{{ STATIC_URL }}/js/styleguide.js" src="{{ STATIC_URL }}/js/bower/requirejs/require.js"></script>
{% endblock main_js %}
</body>
</html>