<% if(editing){ %>
    <div class="panel-editablebox is-editing">
        <div id="<%= topId %>"></div>
        <div id="<%= fieldId %>" class="text margin panel-editablearea" contenteditable="true"><%= text %></div>
        {# <div id="<%= bottomId %>"></div> #}
        
        <div class="paxs tar">
            <a class="btn btn-primary btn-sm ckeditorField-savebtn">{{ gettext('Save') }}</a>
            <a class="btn btn-cancel btn-sm ckeditorField-cancelbtn">{{ gettext('Cancel') }}</a>
        </div>
    </div>
<% } else { %>
    <div class="panel-editablebox">
        <div class="ckeditorField-mainfield text panel-editablearea <% if(canEdit){ %>canEdit<% } %> mvn"><%= text ? text : placeholder %></div>
    </div>
<% } %>
