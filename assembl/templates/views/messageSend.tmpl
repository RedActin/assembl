<% if (canPost) { %>
    <div class="messageSend">
        {% if user %}
        <div class="avatar img-rounded img-left">
            <img height="32" width="32" src="/user/id/{{user.id}}/avatar/32" alt="{{ user.display_name() }}" class="avatar image-rounded" />
        </div>
        {% endif %}
        <div class="interface-container">
            <% if(allow_setting_subject) { %>
            <div class="topic-subject">
                {#<span class="topic-subject-label">{{gettext('New topic subject:')}}</span>#}
                <span class="topic-subject-input"><input type="text" class="messageSend-subject formfield text" placeholder="{{gettext('New topic subject:')}}" /></span>
            </div>
            <% } %>
            <textarea class="formtextarea messageSend-body text text-muted"><%= body_help_message %></textarea>
            <div  class="messageSend-buttons">
                <a class="btn btn-primary btn-sm messageSend-sendbtn hidden"><%= send_button_label %></a>
                <a class="btn btn-cancel btn-sm messageSend-cancelbtn hidden"><%= cancel_button_label %></a>
            </div>
        </div>
    </div>
<% } else { %>
    <div class="warning-box-for-message-post">
        <p>{{gettext('You must be logged in to add a comment.')}} <a href="/login?next_view={{request.current_route_path()}}" class="btn btn-bright btn-sm">{{gettext('Click here to log in')}}</a></p>
    </div>
<% } %>