{% extends 'base.jinja2' %}

{% macro form(name, title, image) %}
{% if name in providers %}
<form id="{{name}}" method="post" action="/login/{{name}}">
{% for k,v in kwargs.items() %}
    <input type="hidden" name="{{ k }}" value="{{ v }}" />
{% endfor %}
{% if name == "openid" %}
    <input type="text" name="openid_identifier" />
{% endif %}
{% if image %}
    <input type="image" value="" src="{{ STATIC_URL }}/img/loginbox/{{name}}.png" alt="{{gettext(title)}}"/>
{% else %}
    <input type="submit" value="{{ gettext(title) }}" />
{% endif %}
</form>
{% endif %}
{% endmacro %}

{% block content %}

<div class="bx-login">

    <div class="bx-welcome"></div>
    <div class="bx-signin">
        <form class="form" method="POST">
            <input type="hidden" name="next_view" value="{{next_view}}" />
            <input type="text" name="identifier" placeholder="{{ gettext('Email or username') }}" autofocus required />
            <input type="password" name="password" placeholder="{{ gettext('Password') }}" required />
            <input type="submit" name="login" value="{{ gettext('Enter') }}"/>
        </form>
    </div>
    <div class="bx-signup">
        <form class="form" method="POST">
           <input type="hidden" name="next_view" value="{{next_view}}" />
           <input type="text" name="name" placeholder="{{ gettext('Name') }}" autofocus required />
           <input type="text" name="email" placeholder="{{ gettext('email') }}" required />
           <input type="password" name="password" placeholder="{{ gettext('Password') }}" required />
           <input type="submit" name="register" value="{{ gettext('Register') }}" />
        </form>
    </div>
</div>



